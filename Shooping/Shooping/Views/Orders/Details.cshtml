@model Shooping.Data.Entities.Sale

@{
    ViewData["Title"] = "Details";
}

<flash dismissable="true" />


<h1>Detalles</h1>

<div>
    <partial name="_OrderDetails" /> 
    <partial name="_AddOrEditDialog"/>
</div>

<div>
    <a onclick="showInPopup('@Url.Action("Dispatch", "Orders", new { id = Model.Id }, Context.Request.Scheme)' , 'Confirmar despacho')" class="btn btn-outline-primary"> Despachar</a>
    <a onclick="showInPopup('@Url.Action("Send", "Orders", new { id = Model.Id }, Context.Request.Scheme)' , 'Confirmar envío')" class="btn btn-outline-success"> Enviar</a>
    <a onclick="showInPopup('@Url.Action("Confirm", "Orders", new { id = Model.Id }, Context.Request.Scheme)' , 'Confirmar pedido')" class="btn btn-outline-warning"> Confirmar</a>
    <a onclick="showInPopup('@Url.Action("Cancel", "Orders", new { id = Model.Id }, Context.Request.Scheme)' , 'Cancelar pedido')" class="btn btn-outline-danger"> Cancelar</a>
    <a asp-action="Index" class="btn btn-outline-success"><i class="fa-solid fa-arrow-rotate-left"></i> Regresar</a>
</div>

<hr />

<div class="container-fluid">
    <div class="card mt-2">
        <div class="card-header text-danger">
            <i class="fa fa-usd"></i>  <strong>Pedidos</strong>
        </div>
        <div class="card-body">
            <div id="view-all">
                @await Html.PartialAsync("_ViewAllDetail", Model.SaleDetails)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/js/showmodal.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#DetailsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>


}
